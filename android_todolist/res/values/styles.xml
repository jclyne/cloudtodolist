<resources>
    <style name="todolist_layout">
        <item name="android:background">#E0E0E0</item>
    </style>

    <style name="todolist_entry_layout">
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="todolist_label_text">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="todolist_entry_text">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="todolist_entry_checkbox">

    </style>

    <style name="todolist_new_entry_text">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">#E0E0E0</item>
    </style>

    <style name="todolist_listview">
        <item name="android:cacheColorHint">#00000000</item>
    </style>

</resources>