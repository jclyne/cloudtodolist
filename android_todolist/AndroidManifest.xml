<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.oci.example.todolist"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:label="@string/app_name" android:icon="@drawable/icon">

        <provider android:name=".provider.TodoListProvider"
                  android:authorities="com.oci.provider.todolist"
                  android:exported="false">
            <grant-uri-permission android:pathPattern=".*"/>
        </provider>

        <activity android:name=".TodoListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".TodoListEditEntryActivity"
                  android:label="@string/edit_entry_activity">
            <intent-filter>
                <action android:name="android.intent.action.EDIT"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="vnd.android.cursor.item/vnd.oci.todolist.entry"/>
            </intent-filter>
        </activity>

        <activity android:name=".TodoListSettingsActivity" android:label="Settings"/>

        <service android:name=".TodoListSyncService"
                 android:label="TodoListSyncService">

            <intent-filter>
                <action android:name="com.oci.example.todolist.SYNC"/>
            </intent-filter>

        </service>

    </application>

</manifest>
